@page "{id:int}"
@model EditUserModel
@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

<form class="form-horizontal" method="post">
    <div class="form-group">
        <label class="control-label col-sm-2">Username:</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" name="Username" value="@Model.User.Username" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Email:</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" name="Mail" value="@Model.User.Mail" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Phone Number:</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" name="PhoneNumber" value="@Model.User.PhoneNumber" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Skillsets:</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" name="Skillsets" placeholder="comma separated" value="@string.Join(", ", Model.User.Skillsets)" />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-2">Hobbies:</label>
        <div class="col-sm-5">
            <input class="form-control" type="text" name="Hobby" placeholder="comma separated" value="@string.Join(", ", Model.User.Hobby)" />
        </div>
    </div>
    <div>
        <button class="btn btn-primary" type="submit">Update</button>
    </div>
</form>

<a asp-page="./Index">Back to List</a>